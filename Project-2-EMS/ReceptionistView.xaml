        <!-- Split the main panel into two columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*"   />
        </Grid.ColumnDefinitions>

        <!-- This is the side control panel -->
        <Grid Name="ControlPanel" Grid.Column="0" Background="#FF26282C" >
            <!-- Grid Row Definitions split the Grid into rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"   />
                <RowDefinition Height="60"   />
                <RowDefinition Height="60"   />
                <RowDefinition Height="60"   />
                <RowDefinition Height="*"    />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!-- Image can be filled with our logo -->
            <Image Grid.Row="0" Height="50" Source="App_Resources/EdmondsonInternalMedicine.png"/>

            <Button Name="Calendar" Content="Calendar" Grid.Column="0" Grid.Row="1" Height="50" FontSize="18" Background="#FF26282C" Click="ControlButton_Click" />
            <Button Name="Signin" Content="Sign-in"  Grid.Column="0" Grid.Row="2" Height="50" FontSize="18" Background="#FF26282C" Click="ControlButton_Click" />
            <Button Name="Billing" Content="Billing"  Grid.Column="0" Grid.Row="3" Height="50" FontSize="18" Background="#FF26282C" Click="ControlButton_Click" />
            <Button Content="Log Out"  Grid.Column="0" Grid.Row="5" Height="50" FontSize="18" Background="#FF26282C" Click="LogOutButton_Click" />

            <Grid Grid.Row="4" Name="CalendarSidePanel" Margin="10,10,10,15" Background="#FF30373E" Visibility="Visible" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="260" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- Viewbox scales the calendar to fill the grid -->
                <Viewbox Grid.Row="0" VerticalAlignment="Top" Margin="10,5,10,0" >
                    <Calendar Name="ApptCalendar" SelectedDatesChanged="ApptCalendar_SelectedDatesChanged" GotMouseCapture="ApptCalendar_GotMouseCapture" />
                </Viewbox>
                <Grid Name="ApptButtonGrid" Grid.Row="1" Background="#FF30373E" Visibility="Hidden" >
                    <Button Name="ViewApptButton" Height="40" Width="200" VerticalAlignment="Top" Margin="10" FontSize="18" Click="ViewApptButton_Click" />
                </Grid>
            </Grid>
        </Grid>

